<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.team29.speakingpartners">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.team29.speakingpartners.SpeakingPartnersApplication"
        android:allowBackup="false"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Main.SpeakingPartner.LightBlueTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name="com.team29.speakingpartners.activity.LoginActivity"
            android:theme="@style/AppTheme"
            tools:targetApi="lollipop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.team29.speakingpartners.activity.SignUpActivity"
            android:theme="@style/AppTheme"
            tools:targetApi="lollipop" />
        <activity
            android:name="com.team29.speakingpartners.activity.ProfileDetailActivity"
            android:theme="@style/Main.SpeakingPartner.BlueTheme"
            android:parentActivityName="com.team29.speakingpartners.MainActivity"
            tools:targetApi="jelly_bean" />
        <activity
            android:name="com.team29.speakingpartners.activity.SettingsActivity"
            android:theme="@style/Main.SpeakingPartner.BlueTheme" />
        <activity
            android:name="com.team29.speakingpartners.MainActivity"
            android:theme="@style/Main.SpeakingPartner.BlueTheme" />

        <activity android:name="com.team29.speakingpartners.activity.voicecall.CallingViewActivity" />

        <activity android:name="com.team29.speakingpartners.activity.EachRecentListActivity" />

        <activity android:name="com.team29.speakingpartners.activity.EditProfileActivity"
            android:parentActivityName="com.team29.speakingpartners.activity.ProfileDetailActivity"
            tools:targetApi="jelly_bean" />
    </application>

</manifest>