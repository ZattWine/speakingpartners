<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">

        <shape>
            <corners android:radius="100dp" />
            <solid android:color="@color/color_red_700" />
            <stroke
                android:width="3dip"
                android:color="#f9f9f9" />
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp" />
        </shape>

    </item>

    <item android:state_pressed="true">

        <shape>
            <corners android:radius="100dp" />
            <solid android:color="@color/color_red_500" />
            <stroke
                android:width="3dip"
                android:color="#f9f9f9" />
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp" />
        </shape>

    </item>

</selector>