<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_row_height"
    android:orientation="horizontal"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:gravity="center">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/pending_user_img"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:background="@drawable/circular_border_image_view"
            android:src="@drawable/ic_person_white_24dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/str_user_name"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_weight="3">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="6dp">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/pending_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/str_user_name"
                android:textStyle="bold"
                android:textSize="@dimen/general_text_size_16"
                android:textColor="@android:color/darker_gray"/>

        </LinearLayout>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/pending_user_active_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/str_user_active_now"
            android:textSize="@dimen/general_text_size_14"
            android:textColor="@color/color_green"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="2"
        android:gravity="center">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="@string/str_review"
            android:textColor="@color/color_white"
            android:textAllCaps="false"
            android:background="@drawable/log_in_button_design"
            android:layout_marginRight="5dp" />

    </LinearLayout>

</LinearLayout>