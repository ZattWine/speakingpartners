<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dialog_width"
    android:layout_height="@dimen/dialog_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_rectangle_border_image_view"
    tools:context=".activity.voicecall.RequestReviewActivity">

    <LinearLayout
        android:id="@+id/calling_request_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_footer_header"
        android:orientation="horizontal"
        android:background="@color/color_blue_500"
        android:gravity="center_vertical">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/calling_request_profile_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_person_white_24dp"
            android:layout_marginLeft="@dimen/general_padding_8"
            android:layout_marginStart="@dimen/general_padding_8" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_calling_request_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/general_padding_8"
            android:layout_marginStart="@dimen/general_padding_8"
            android:text="@string/str_user_name"
            android:textStyle="bold"
            android:textSize="@dimen/general_text_size_18"
            android:textColor="@color/color_white"/>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/calling_request_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_content"
        android:layout_below="@id/calling_request_header"
        app:cardCornerRadius="@dimen/general_padding_4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/general_padding_16">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_pre_calling_motivation"
                android:textSize="@dimen/general_text_size_16"
                android:textStyle="bold"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/general_padding_16">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/str_user_level"
                    android:textStyle="bold"
                    android:textSize="@dimen/general_text_size_16"
                    android:textColor="@color/color_black"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_calling_request_level"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textStyle="normal"
                    android:textSize="@dimen/general_text_size_14"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/general_padding_16">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/str_user_country"
                    android:textStyle="bold"
                    android:textSize="@dimen/general_text_size_16"
                    android:textColor="@color/color_black"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_calling_request_country"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textStyle="normal"
                    android:textSize="@dimen/general_text_size_14"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/general_padding_16">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/str_user_gender"
                    android:textStyle="bold"
                    android:textSize="@dimen/general_text_size_16"
                    android:textColor="@color/color_black"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_calling_request_gender"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textStyle="normal"
                    android:textSize="@dimen/general_text_size_14"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:visibility="gone">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/str_user_email"
                    android:textStyle="bold"
                    android:textSize="@dimen/general_text_size_16"
                    android:textColor="@color/color_black"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_calling_request_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textStyle="normal"
                    android:textSize="@dimen/general_text_size_14"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/general_text_size_16"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/general_padding_32"
                android:layout_marginTop="@dimen/general_padding_16">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/pre_calling_topic"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/general_text_size_16"
                    android:textStyle="bold" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_calling_request_topic"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_weight="2"
                    android:textSize="@dimen/general_text_size_14"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/calling_request_footer"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_footer_header"
        android:layout_alignParentBottom="true"
        android:padding="4dp"
        tools:ignore="RtlHardcoded">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/calling_request_start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/str_start"
            android:textColor="@color/color_white"
            android:background="@drawable/log_in_button_design"/>

    </LinearLayout>

</RelativeLayout>