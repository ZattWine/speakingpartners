<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.RecentFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:id="@+id/recent_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:tabMode="fixed"
            app:tabGravity="fill"
            app:tabIndicator="@color/color_orange_A_200"
            app:tabIndicatorHeight="@dimen/general_padding_2"
            app:tabSelectedTextColor="@color/color_orange_A_200"
            app:tabTextColor="@color/color_white"
            android:background="@color/color_blue_500">
        </android.support.design.widget.TabLayout>

        <FrameLayout
            android:id="@+id/recent_tab_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/recent_tab_layout"/>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>